{
    "identifier": "vinecode.NovaJsMin",
    "name": "NovaJsMin",
    "vendor": "Vine Code Limited",
    "description": "Automatically minify JS files on save.",
    "version": "0.6",
    "categories": ["formatters"],
    "repository": "https://github.com/vinecode/NovaJsMin",
    "bugs": "https://github.com/vinecode/NovaJsMin/issues",        
    "main": "main.js",
    "entitlements": {
        "process": true
    },    
    
    "commands": {
        "editor": [
            {
                "title": "Minify JS",
                "command": "NovaJsMin.minifyFile",
                "when": "editorSyntax == 'javascript'"             
            },
            {
                "title": "Beautify JS",
                "command": "NovaJsMin.beautifyFile",
                "when": "editorSyntax == 'javascript'"             
            }            
        ]
    },    
    
    "config": [        
        {
            "key": "VineCode.NovaJsMin.minifyOnSave",
            "title": "Minify on Save",
            "description": "Automatically minify js files on save.",
            "type": "enum",
            "values": ["Yes", "No"],
            "default": "Yes"               
        },
        {
            "key": "VineCode.NovaJsMin.mangle",
            "title": "Mangle",
            "description": "Mangle Names.",
            "type": "enum",
            "values": ["Yes", "No"],
            "default": "Yes" 
        },
        {
            "key": "VineCode.NovaJsMin.sourceMap",
            "title": "Generate Source Map",
            "description": "Enable source map file generation",
            "type": "enum",
            "values": ["Yes", "No"],
            "default": "Yes" 
        },
        {
            "key": "VineCode.NovaJsMin.execPath",
            "title": "Executable Path",
            "type": "path",
            "description": "Manually set the path for the sass executable.",
            "placeholder": "/usr/local/bin/uglifyjs" 
        }     
    ]    
}
